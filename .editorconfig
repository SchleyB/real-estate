# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,jsx,html,json}]
indent_style = space
indent_size = 2

[*.{mas,xmp,pl}]
indent_style = space
indent_size = 4

[*.{css,sass,scss}]
indent_style = tab
indent_size = 4
